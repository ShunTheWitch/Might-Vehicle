<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_ZTZ99A_MainTurret</defName>
		<label>high-explosive shell</label>
		<thingClass>Projectile_Explosive</thingClass>
		
		<graphicData>
			<texPath>Things/Projectile/ShellHighExplosive</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		
		<projectile>
			<damageDef>Thump</damageDef>
			<damageAmountBase>4</damageAmountBase>
			<speed>70</speed>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
			<soundAmbient>MortarRound_Ambient</soundAmbient>
		</projectile>
	</ThingDef>
	
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>mightaacannon</defName>
		<label>Anti Air Cannons</label>
		<description>S</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>VVE_Shot_BulldogCannonSound</shotSound>
		<reloadSound>VVE_BulldogReloadSound</reloadSound>
		
		<projectile>Bullet_ZTZ99A_MainTurret</projectile>
		<reloadTimer>4.4</reloadTimer>
		<warmUpTimer>3.4</warmUpTimer>
		<magazineCapacity>0</magazineCapacity>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.2</rotationSpeed>
		
		<projectileOffset>5.25</projectileOffset>
		<hitFlags>IntendedTarget</hitFlags>
		<maxRange>48.9</maxRange>
		<minRange>4</minRange>
		
		<attachProjectileFlag>VVE_Tank</attachProjectileFlag>
		
		<recoil>
			<distanceTotal>0.6</distanceTotal>
			<distancePerTick>0.2</distancePerTick>
			<speedMultiplierPostRecoil>0.35</speedMultiplierPostRecoil>
		</recoil>
		
		<vehicleRecoil>
			<distanceTotal>0.1</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.55</speedMultiplierPostRecoil>
		</vehicleRecoil>
		
		<fireModes>
			<li>
				<shotsPerBurst>6</shotsPerBurst>
				<ticksBetweenShots>6</ticksBetweenShots>
				<ticksBetweenBursts>6</ticksBetweenBursts>
				<spreadRadius>2.5</spreadRadius>
				<label>Full-Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>
		
		<graphicData>
			<texPath>Things/Vehicles/Tier2/ZTZ99A/Tier2_Tank_CannonTop</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(6, 6)</drawSize>
		</graphicData>
		
		
		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>
	</Vehicles.VehicleTurretDef>
</Defs>